{%- comment -%}Split with H5{%- endcomment -%}                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   {%- if opd == 'split:"<h5>"' and shop.url == 'https://enetrends.com' -%}
  {% assign descriptionparts = product.description | remove: '<article>' | remove: '</article>' | remove: '<fieldset>' | remove: '</fieldset>' | split: '<h5>' %}
  {% for description in descriptionparts %}{% assign numbers = forloop.index0 %}{% if forloop.index0 > 0 %}{% if description contains '</h5>' %}{% assign partsheading = description | split: '</h5>'  %}{% else %}{% assign partsheading = 'Description' %}{% endif %}
  <div class="Collapsible Collapsible--large"><button class="Collapsible__Button Heading u-h6" data-action="toggle-collapsible" aria-expanded="false">{% if description contains '</h5>' %}{{partsheading[0] | capitalize }}{% else %}{{partsheading}}{% endif %}<span class="Collapsible__Plus"></span></button>{% if description contains '</h5>' %}{% assign partscontent = description | split: '</h5>' %}{% else %}{% assign partscontent = product.description | remove: '<article>' | remove: '</article>' | remove: '<fieldset>' | remove: '</fieldset>' | split: '<h5>' %}{% endif %}
  <div class="Collapsible__Inner"><div class="Collapsible__Content"><div class="Rte">{% if description contains '</h5>' %}{{ partscontent[1] }}{% else %}{{ partscontent[0] }}{% endif %}</div></div></div></div>{% endif %}{% endfor %}
{%- endif -%}
